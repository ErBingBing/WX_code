   /* margin-bottom:20px; */
   }
.section__title{
  font-size:16px;
  margin-bottom:4px;
  margin-left:5px;
}
.group{
  margin-bottom:10px;
  margin-left:14px;
}
.label-1, .label-2{
    display: inline-block;
    margin-bottom: 4px;
    width:48%;
    /* height:14px;
    line-height: 14px; */
}
.label-1__text, .label-2__text {
    display: inline-block;
    vertical-align: middle;
    height:18px;
    line-height:18px;

}
.label-2__text{
    margin-top:-3px;
}
.label-1__icon {
    position: relative;
    margin-right: 4px;
    display: inline-block;
    vertical-align: middle;
    width: 18px;
    height: 18px;
    line-height:14px;
    background: #e7e5e5;
}

.label-1__icon-checked {
    position: absolute;
    top: 3px;
    left: 3px;
    width:12px;
    height: 12px;
    background: #3097d9;
}
.label-2__icon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-right: 4px;
    width: 18px;
    height: 18px;
    line-height:14px;
    background: #e7e5e5;
    border-radius: 50px;

}
.label-2__icon-checked {
    position: absolute;
    left: 3px;
    top: 3px;
    width:12px;
    height:12px;
    background: #3097d9;
    border-radius: 50%;
}

