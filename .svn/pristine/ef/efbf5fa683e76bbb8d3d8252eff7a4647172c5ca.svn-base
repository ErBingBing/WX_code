/* pages/detail/detail.wxss */
.wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  height:70rpx;
  justify-content:space-around;
  /* border-bottom: 1px solid #cccccc; */
}
 .wrap .active{
   border-bottom:6rpx darkorange solid;
   padding:8rpx 30rpx;
} 
 .wrap .activenull{
   border-bottom:none;
   padding:8rpx 30rpx;
} 

/*include css  start*/
  .clear{
    clear:both;
    height:0;
    overflow:hidden;
} 
.conts{
  background: #fff;
  margin:6px 0;
  padding:8px 0; 
  border-bottom:1px solid #cccccc;
  box-shadow: 0px 2px 3px #efefef;
}
.conts view .one{
  float: left;
  width:70%;
  padding-left:2%;
}
.conts view .two{
  float: left;
  width:28%;
  
} 
.firstInfo .one,.firstInfo .two{ 
  color:#3097d9;
  font-size: 16px;
  /* font-weight: bold;*/
}
.secondInfo .one,.secondInfo .two{
  font-size: 15px;
  padding-top:10rpx;
  padding-bottom:10rpx;
  /* font-weight: bold; */
}
.secondInfo .two{
  color:#ff5b52;

}
.thirdInfo .ones{ 
  display:block;
  width:96%;
  padding-left:2%;
  font-size: 13px;  
  color:#cccccc;
} 
/*include css  end*/
/*完成页面回显样式*/
.table {
  border: 0px solid darkgray;
  background: #fff;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}

.td-1 {
  width: 27%;
  justify-content: center;
  display: flex;
  text-align: right;
  padding-left: 0px;
  margin-left: 0px;
  background: #ececec;
  padding: 32rpx 0;
  height: 100%;
  line-height: 100%;
}

.td-2 {
  width: 73%;
  justify-content: center;
  text-align: center;
  max-width: 100%;
  height: 100%;
  line-height: 100%;
}
/*外访报告样式*/
.section{
   /* width:100%; */
   margin:10px 2%;
   border-bottom: 1px solid #ececec;
   }
.textareaBox{
  border: 1px solid #ececec;
  font-size: 16px;
}
.NoneData{
  padding:38px 0;
  text-align: center
}
.NoneData text{
  font-size: 16px;
  color:#cccccc;
}

